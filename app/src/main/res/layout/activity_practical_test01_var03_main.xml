<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="practicaltest01var03.eim.systems.cs.pub.ro.practicaltest01var03.PracticalTest01Var03MainActivity">

    <Button
        android:id="@+id/navigate_to_secondary_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/navigate_to_secondary_activity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/first_checkbox"
            android:layout_width="wrap_content"
            android:saveEnabled="false"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <EditText
            android:id="@+id/first_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:saveEnabled="false"
            android:layout_weight="1"
            android:inputType="text"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/second_checkbox"
            android:layout_width="wrap_content"
            android:saveEnabled="false"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <EditText
            android:id="@+id/second_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:saveEnabled="false"
            android:layout_weight="1"
            android:inputType="text"
            android:gravity="center" />

    </LinearLayout>

    <Button
        android:id="@+id/display_information_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/display_information_button" />
    <EditText
        android:id="@+id/show_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:saveEnabled="false"
        android:enabled="false"
        android:inputType="text"
        android:gravity="center" />

</LinearLayout>
